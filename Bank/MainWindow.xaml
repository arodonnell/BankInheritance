<Window x:Class="Bank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lbxDisplay" HorizontalAlignment="Left" Height="182" Margin="37,61,0,0" VerticalAlignment="Top" Width="192" SelectionChanged="lbxDisplay_SelectionChanged"/>
        <TextBlock x:Name="tblkDetail" HorizontalAlignment="Left" Margin="290,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="182" Width="180"/>
        <TextBox x:Name="tbxAmount" HorizontalAlignment="Left" Height="23" Margin="37,273,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" GotFocus="tbxAmount_GotFocus"/>
        <Button Content="Withdraw" HorizontalAlignment="Left" Margin="251,273,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Deposit" HorizontalAlignment="Left" Margin="343,272,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Add Interest" HorizontalAlignment="Left" Margin="435,272,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>

    </Grid>
</Window>
